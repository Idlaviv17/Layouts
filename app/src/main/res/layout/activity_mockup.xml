<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start" >

        <ImageView
            android:id="@+id/cancel_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/cancel_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/online_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/dot_icon" />

            <TextView
                android:id="@+id/text_bedroom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bedroom"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/dropdown_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_down"
                android:layout_marginHorizontal="5dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/button_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/search_icon" />

        <ImageView
            android:id="@+id/button_mic"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/mic_icon" />

        <ImageView
            android:id="@+id/button_keyboard"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/keyboard_icon" />

        <ImageView
            android:id="@+id/button_config"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/config_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/button_return"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:background="@drawable/button_styling"
            android:layout_marginHorizontal="80dp"
            android:src="@drawable/arrow_left_icon" />

        <ImageButton
            android:id="@+id/button_home"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:background="@drawable/button_styling"
            android:layout_marginHorizontal="80dp"
            android:src="@drawable/home_icon" />

    </LinearLayout>

    <ImageView
        android:id="@+id/button_controllers"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/control" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/button_replay"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/lower_button_styling"
            android:src="@drawable/replay_icon" />

        <ImageButton
            android:id="@+id/button_options"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/lower_button_styling"
            android:src="@drawable/options_icon" />

        <ImageButton
            android:id="@+id/button_headphones"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/lower_button_styling"
            android:src="@drawable/headphones_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/lower_button_styling"
            android:src="@drawable/play_back_icon" />

        <ImageButton
            android:id="@+id/button_play_pause"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/lower_button_styling"
            android:src="@drawable/play_pause_icon" />

        <ImageButton
            android:id="@+id/button_forward"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/lower_button_styling"
            android:src="@drawable/play_forward_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/button_remote"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/menu_buttons_styling"
                android:src="@drawable/remote_icon" />

            <TextView
                android:id="@+id/text_remote"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Remote"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/menu_buttons_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_apps"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/menu_buttons_styling"
                android:src="@drawable/apps_icon" />

            <TextView
                android:id="@+id/text_apps"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Recent Apps"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/menu_buttons_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_continue"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/menu_buttons_styling"
                android:src="@drawable/watching_icon" />

            <TextView
                android:id="@+id/text_continue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Continue \nWatching"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/menu_buttons_background"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>